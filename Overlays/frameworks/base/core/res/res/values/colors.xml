<resources>
    <!-- Colors specific to DeviceDefault themes. These are mostly pass-throughs to enable
         overlaying new theme colors. -->

    <!-- Light theme -->
    <color name="background_material_light">#ffffffff</color>
    <color name="error_color_material_light">#ffd93025</color>
    <color name="primary_material_light">#ffffffff</color>
    <color name="primary_dark_material_light">#ffffffff</color>
    <color name="primary_material_settings_light">@*android:color/primary_material_light</color>
    <color name="primary_dark_material_settings_light">@*android:color/primary_dark_material_light</color>

    <!-- Dark theme -->
    <color name="background_material_dark">#ff202124</color>
    <color name="background_floating_material_dark">#ff303135</color>
    <color name="error_color_material_dark">#fff28b82</color>
    <color name="primary_material_dark">#ff202125</color>
    <color name="primary_dark_material_dark">#ff202125</color>
    <color name="primary_material_settings">@*android:color/primary_material_dark</color>
    <color name="primary_dark_material_settings">@*android:color/primary_dark_material_dark</color>

    <!-- Other colors -->
    <color name="secondary_material_settings">#ff303135</color>
    <color name="tertiary_material_settings">#ff616161</color>
    <color name="quaternary_material_settings">#ff9e9e9e</color>
    <color name="system_error">#ffea4335</color>
</resources>
